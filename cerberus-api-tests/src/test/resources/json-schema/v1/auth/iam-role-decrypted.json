{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "client_token": {
      "type": "string"
    },
    "policies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "aws_account_id": {
          "type": "string"
        },
        "aws_iam_role_name": {
          "type": "string"
        },
        "aws_region": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      },
      "required": [
        "aws_account_id",
        "aws_iam_role_name",
        "aws_region",
        "username"
      ]
    },
    "lease_duration": {
      "type": "integer"
    },
    "renewable": {
      "type": "boolean"
    }
  },
  "required": [
    "client_token",
    "policies",
    "metadata",
    "lease_duration",
    "renewable"
  ]
}